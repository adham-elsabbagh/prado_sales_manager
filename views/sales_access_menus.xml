<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Sales Country Manager Action -->
        <record id="action_sales_country_manager" model="ir.actions.act_window">
            <field name="name">Country Managers</field>
            <field name="res_model">sales.country.manager</field>
            <field name="view_mode">tree,form,kanban</field>
            <field name="context">{}</field>
            <field name="domain">[]</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first Country Manager!
                </p>
                <p>
                    Country Managers can oversee multiple salespeople and access their sales orders.
                    This allows for better management and visibility across sales teams.
                </p>
            </field>
        </record>

        <!-- Enhanced Sales Teams Action -->
        <record id="action_sales_teams_enhanced" model="ir.actions.act_window">
            <field name="name">Sales Teams (Enhanced)</field>
            <field name="res_model">crm.team</field>
            <field name="view_mode">tree,form,kanban</field>
            <field name="context">{'search_default_sales_teams': 1}</field>
            <field name="domain">[('use_opportunities', '=', False)]</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Set up your Sales Teams with enhanced access control!
                </p>
                <p>
                    Define team members who can access all orders for their team.
                    Team members will have visibility to orders beyond just their own.
                </p>
            </field>
        </record>

        <!-- Menu Items -->

        <!-- Country Managers Menu under Sales/Configuration -->
        <menuitem id="menu_sales_country_manager"
                  name="Country Managers"
                  parent="sale.sale_menu_root"
                  action="action_sales_country_manager"
                  groups="sales_team.group_sale_manager"
                  sequence="30"/>

        <!-- Enhanced Teams Menu -->
        <menuitem id="menu_sales_teams_enhanced"
                  name="Sales Teams (Enhanced)"
                  parent="sale.sale_menu_root"
                  action="action_sales_teams_enhanced"
                  groups="sales_team.group_sale_manager"
                  sequence="25"/>

        <!-- Configuration Menu -->
        <menuitem id="menu_sales_access_config"
                  name="Access Control"
                  parent="sale.menu_sale_config"
                  groups="sales_team.group_sale_manager"
                  sequence="100"/>

        <menuitem id="menu_sales_country_manager_config"
                  name="Country Managers"
                  parent="menu_sales_access_config"
                  action="action_sales_country_manager"
                  groups="sales_team.group_sale_manager"
                  sequence="10"/>

        <!-- Add shortcut to regular teams in config -->
        <menuitem id="menu_sales_teams_config"
                  name="Sales Teams"
                  parent="menu_sales_access_config"
                  action="sales_team.crm_team_action_config"
                  groups="sales_team.group_sale_manager"
                  sequence="20"/>

    </data>
</odoo>